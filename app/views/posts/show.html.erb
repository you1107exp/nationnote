<div class="container">
  <%# タイトルと国名 %>
  <div class="show-top">
    <h2 class="show-title"><%= @post.title %></h2>
    <span class="show-sub-wrap">in <%= @post.country.name %></span>
    <span class="show-sub-wrap">
      <a class="show-sub" href="/users/<%= @post.user.id %>">
        <span>by <%= @post.user.nickname %></span>
      </a>
    </span>
    <% if user_signed_in? && current_user.id == @post.user_id %>
      <ul class="position-relative">
        <li class="pull-down">
          <%= link_to '編集', edit_post_path(@post.id), method: :get, class:"pull-down-list" %>
          <%= link_to '削除', post_path(@post.id), method: :delete, class:"pull-down-list" %>
        </li>
      </ul>
    <% end %>
  </div>
  <%# タイトルと国名 %>
  <div class="show-container">
    <div>
      <%= image_tag @post.ref_img.variant(resize:'500x500'), class:"show-ref-img" if @post.ref_img.attached? %>
    </div>
    <div class="show-content">
      <%= @post.content %>
    </div>
    <div class="show-ref-url">
      <%= @post.ref_url %>
    </div>
  </div>
  <div class="back-to-top">
    <a class="btn" href="/">トップページへ戻る</a>
  </div>
</div>