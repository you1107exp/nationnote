<!DOCTYPE html>
<html>
  <head>
    <title>NationNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header-bar">
        <div class="header-logo">
          <%= link_to image_tag("nationnote-logo.png", class:"nationnote-icon"), "/" %>
        </div>
        <% if user_signed_in? %>
          <div class="user-nav">
            <%= link_to "投稿する", new_post_path, class:"btn new-post-btn" %>
            <%= link_to current_user.nickname, "/users/#{current_user.id}", class:"btn user-btn" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn user-btn" %>
          </div>
        <% else %>
          <div class="user-nav">
            <%= link_to "新規登録", new_user_registration_path, class:"btn user-btn" %>
            <%= link_to "ログイン", new_user_session_path, class:"btn user-btn" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p>Copyright(C) NationNote ALL RIGHTS RESERVED.</p>
    </footer>
  </body>
</html>
