<div class="main row">
  <h2 class="mypage-title"><%= @nickname %>さんの投稿一覧</h2>
  <% @posts.each do |post| %>
    <div class="content-post">
      <p class="head-post"><%= link_to post.title, post_path(post.id), method: :get, class:"content-title" %></p>
      <a class="show-sub" href="/country_posts/<%= post.country.id %>">
        <span class="foot-post country margin">in <%= post.country.name %></span>
      </a>
      <% if user_signed_in? && current_user.id == post.user_id %>
        <li class="pull-down">
          <%= link_to '編集', edit_post_path(post.id), method: :get, class:"pull-down-list" %>
          <%= link_to '削除', post_path(post.id), method: :delete, id:"delete-btn", class:"pull-down-list" %>
        </li>
      <% end %>
    </div>
  <% end %>
</div>